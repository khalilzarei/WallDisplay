<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="RoomMoodItem">

        <variable
            name="viewModel"
            type="com.hsi.walldisplay.ui.main.viewmodel.RoomViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/_3sdp"
        app:cardBackgroundColor="@color/text_color"
        app:cardCornerRadius="@dimen/_5sdp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/rootLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_1sdp"
                    app:cardBackgroundColor="@color/edit_text_background"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        setImageUrl="@{viewModel.building.image}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher_background" />
                </androidx.cardview.widget.CardView>
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/tvRoomTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:text="@{viewModel.building.name}"
                    android:textColor="@color/background"
                    android:textStyle="bold"
                    tools:text="TitleTitle" />

            </com.balysv.materialripple.MaterialRippleLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>