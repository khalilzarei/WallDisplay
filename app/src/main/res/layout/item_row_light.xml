        <!--                android:id="@+id/lightLayoutDali"-->
        <!--                layout="@layout/light_layout_dali"-->
        <!--                app:viewModel="@{viewModel}" />-->

        <!--            <include-->
        <!--                android:id="@+id/lightLayoutCct"-->
        <!--                layout="@layout/light_layout_cct"-->
        <!--                app:viewModel="@{viewModel}" />-->

        <!--            <include-->
        <!--                android:id="@+id/lightLayoutRgbw"-->
        <!--                app:viewModel="@{viewModel}"-->
        <!--                layout="@layout/light_layout_rgbw" />-->
        <!--        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/shape_line_horizontal" />
    </LinearLayout>

</layout>


